<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/time_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="当前时间："
                android:textColor="#ff0000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/e_time_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00"
                android:textColor="#ff0000"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="#ff0000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/e_time_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00"
                android:textColor="#ff0000"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="#ff0000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/e_time_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00"
                android:textColor="#ff0000"
                android:textSize="25sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/clock_bg1">

            <ImageView
                android:id="@+id/img_h"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="67dp"
                android:src="@drawable/clock_h" />

            <ImageView
                android:id="@+id/img_m"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/img_h"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:src="@drawable/clock_m" />

            <ImageView
                android:id="@+id/img_s"
                android:layout_width="40dp"
                android:layout_height="110dp"
                android:layout_alignTop="@+id/img_m"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@drawable/clock_s" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/main_btn_start"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="切换背景"
                android:textSize="20sp" />

            <Button
                android:id="@+id/main_btn_pause"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="停止背景音乐"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>